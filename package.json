{
  "name": "meeray-sidechain",
  "version": "1.0.0",
  "type": "module",
  "main": "./dist/main.js",
  "scripts": {
    "start": "node dist/main.js",
    "dev": "nodemon --watch src --ext ts --exec \"tsx src/main.ts\"",
    "observer": "npm run reset-observer && cross-env PEERS=ws://localhost:6001 LOG_LEVEL=info WITNESS_PUBLIC_KEY=x WITNESS_PRIVATE_KEY=x MONGO_DB=meeray_observer STEEM_ACCOUNT=observer_node API_PORT=3001 P2P_PORT=6002 nodemon --watch src --ext ts --exec \"tsx src/main.ts\"",
    "producer": "cross-env PEERS=ws://localhost:6001 LOG_LEVEL=info API_PORT=3002 P2P_PORT=6002 WITNESS_PUBLIC_KEY=29YugDTkCuz1L2sQ8SvknF89cUh9RzaPfhogXrzuTJ7YK WITNESS_PRIVATE_KEY=2FvK1XvSgrn4e1n9A7t85aQRQVfUkgT4f1D1GUMtQqRV MONGO_DB=meeray_producer STEEM_ACCOUNT=echelon-node3 nodemon --watch src --ext ts --exec \"tsx src/main.ts\"",
    "reset": "mongosh meeray --eval \"db.dropDatabase()\"",
    "reset:observer": "mongosh meeray_observer --eval \"db.dropDatabase()\"",
    "reset:producer": "mongosh meeray_producer --eval \"db.dropDatabase()\"",
    "build": "rimraf dist && tsc",
    "build:prod": "node scripts/build-prod.cjs",
    "restore": "curl -o ./meeray-latest.gz https://meeray.com/backups/meeray-latest.gz && mongorestore --uri=mongodb://127.0.0.1:27017 --archive=./meeray-latest.gz --gzip",
    "restore:producer": "npm run reset:observer && curl -o ./meeray-latest.gz https://meeray.com/backups/meeray-latest.gz && mongorestore --uri=mongodb://127.0.0.1:27017  --nsFrom='meeray.*'  --nsTo='meeray_producer.*' --archive=./meeray-latest.gz --gzip --dryRun",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:file": "prettier --write",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "docs:build": "apidoc -i src/modules/http -o docs/api -c apidoc.json",
    "docs:serve": "apidoc -i src/modules/http -o docs/api -c apidoc.json && http-server docs/api -p 3333",
    "check": "npm run lint"
  },
  "dependencies": {
    "bs58": "^6.0.0",
    "bson": "^6.10.3",
    "clone-deep": "^4.0.1",
    "cors": "^2.8.5",
    "crypto-js": "^4.2.0",
    "decimal.js": "^10.5.0",
    "dotenv": "^16.3.1",
    "dsteem": "^0.11.3",
    "express": "^4.18.2",
    "kafkajs": "^2.2.4",
    "lodash.clonedeep": "^4.5.0",
    "mongodb": "^6.16.0",
    "run-parallel": "^1.2.0",
    "run-series": "^1.1.9",
    "secp256k1": "^4.0.2",
    "sha256-file": "^1.0.0",
    "winston": "^3.17.0",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/async": "^3.2.24",
    "@types/clone-deep": "^4.0.4",
    "@types/cors": "^2.8.18",
    "@types/crypto-js": "^4.2.2",
    "@types/decimal.js": "^7.4.3",
    "@types/express": "^5.0.1",
    "@types/ip": "^1.1.3",
    "@types/lodash.clonedeep": "^4.5.9",
    "@types/run-parallel": "^1.1.2",
    "@types/secp256k1": "^4.0.6",
    "@types/sha256-file": "^1.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "apidoc": "^1.2.0",
    "cross-env": "^7.0.3",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-unused-imports": "^4.2.0",
    "http-server": "^14.1.1",
    "nodemon": "^3.0.3",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.4",
    "typescript": "^5.9.2"
  }
}
