    "express": "^4.18.2",
    "ip": "^2.0.1",
    "kafkajs": "^2.2.4",
    "lodash.clonedeep": "^4.5.0",
    "mongodb": "^6.16.0",
    "run-parallel": "^1.2.0",
    "run-series": "^1.1.9",
    "secp256k1": "^4.0.2",
    "sha256-file": "^1.0.0",
    "winston": "^3.17.0",
    "ws": "^8.13.0"
